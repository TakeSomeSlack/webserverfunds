<!DOCTYPE html>
<html>
<head>
    <title>Live News</title>
</head>
<body>
 
<h2>News</h2>
<div id="time"></div>
<div id="n">Loading...</div>
 
<script>
function getNews() {
    fetch("https://api.worldnewsapi.com/search-news?api-key=f69e6c0608c64f35a387e337c7f6689e&source-country=us&date=2025-12-03")
        .then(r => r.json())
        .then(d => {
            let t = "";
            d.news.forEach(x => t += x.title + "<br>");
            document.getElementById("n").innerHTML = t;


            let now = new Date();
            document.getElementById("time").innerHTML = "time update" + now.toLocaleString();
        });
}
 
getNews();
setInterval(getNews, 1000);
</script>
 
</body>
</html>